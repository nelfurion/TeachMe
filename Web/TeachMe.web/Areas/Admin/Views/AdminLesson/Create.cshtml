@model TeachMe.Web.Areas.Admin.ViewModels.LessonViewModels.CreateLessonViewModel
<h2>Create new lesson</h2>

@using (Html.BeginForm("Create", "AdminLesson", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Title" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control col-sm-12", @placeholder = "Content", @cols = "20", @rows = "15" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
}

