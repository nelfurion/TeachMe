@{
    ViewBag.Title = "All";
}

<table class="table table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Content</th>
            <th>CreatedOn</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="4">
                @{
                    for (int i = 0; i < 5; i++)
                    {
                        <button class="page-button btn btn-info"><a href="?take=1&skip=@Html.Raw(i)">@Html.Raw(i)</a></button>
                    }
                }
            </td>
        </tr>
    </tfoot>
    <tbody>
        @{
            var skip = Request.Params["skip"] != null ? int.Parse(Request.Params["skip"]) : 0;
            var take = Request.Params["take"] != null ? int.Parse(Request.Params["take"]) : 10;

            var max = ViewBag.Tickets.Count > take ? take : ViewBag.Tickets.Count;
        }
        @{
            for (int i = 0; i < max; i++)
            { 
                <tr>
                    <td>@Html.Raw(ViewBag.Tickets[i].Creator.UserName)</td>
                    <td>@Html.Raw(ViewBag.Tickets[i].Title)</td>
                    <td>@Html.Raw(ViewBag.Tickets[i].Content)</td>
                    <td>@Html.Raw(ViewBag.Tickets[i].CreatedOn)</td>
                </tr>
            }
        }
    </tbody>
</table>



